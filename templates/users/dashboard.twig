{% extends 'base.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="row g-3">
        <div class="col-12">
            <div class="card shadow border-0 text-bg-primary h-100">
                <div class="card-body">
                    <h1>Mokėtina suma: <strong>{{ (leftToPay/100)|format_currency('EUR') }}</strong></h1>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card shadow border-0 h-100">
                <div class="card-body">
                    {% if newestInvoices %}
                        <div class="row">
                            <div class="col-6">
                                <div class="d-flex flex-column">
                                    <div class="d-flex flex-column">Išrašyta: <strong>{{ newestInvoices.created_at|date('Y-m-d') }}</strong></div>
                                </div>
                                <div class="d-flex flex-column mt-3">
                                    <div class="d-flex flex-column">{{ "due_date"|trans }}: <strong>{{ newestInvoices.due_date|date('Y-m-d') }}</strong></div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex flex-column">
                                    <div class="d-flex flex-column">{{ "total"|trans }}: <strong>{{ (newestInvoices.getInvoiceTotal()/100)|format_currency('EUR') }}</strong></div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <h2>Nėra naujausios sąskaitos</h2>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
