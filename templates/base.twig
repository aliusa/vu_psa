<!DOCTYPE html>
<html lang="lt">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}VU PSA{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <!--sheets-->
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}<!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link href="{{ asset('styles/app.scss') }}" rel="stylesheet"/>{# /assets/styles/app.css #}
            <link href="{{ asset('app.js') }}" rel="stylesheet"/>{# /assets/styles/app.css #}
        {% endblock %}
        {# the CSS file lives at "public/css/blog.css" #}
        <!--/sheets-->

        {% block javascripts %}
            <!--importmap-->
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="{{ asset('public/logo.png') }}" loading="lazy" alt="logo" height="30" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!--kairėj-->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Pagrindinis</a>
                        </li>
                        {% if app.user %}
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="/users/login">Prisijungti</a>
                            </li>
                        {% endif %}
                    </ul>


                    <!--dešinėj-->
                    <div class="">
                        {% if app.user %}
                            <span>{{ app.user.userIdentifier }}</span>
                            <a href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket"></i> Atsijungti</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
        {% if app.user %}
            <nav class="navbar navbar-expand-lg bg-primary-subtle shadow">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav2" aria-controls="navbarNav2" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav2">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/services/my">Paslaugos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endif %}

        <div class="container mt-3">
            {% block body %}{% endblock %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
