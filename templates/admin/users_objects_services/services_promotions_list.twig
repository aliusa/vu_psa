{#Failas užkraunamas iš TVS#}

<table class="table table-responsive table-hover table-condensed table-bordered">
    <thead>
    <tr class="table-secondary">
        <th>Akcija</th>
        <th>{{ "months"|trans }}</th>
        <th>{{ "admin"|trans }}</th>
        <th>{{ "created_at"|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for servicesPromotion in field.value %}
        <tr>
            <td>{{ servicesPromotion.services_promotions }}</td>
            <td>{{ servicesPromotion.services_promotions.months }}</td>
            <td>{{ servicesPromotion.admin }}</td>
            <td>{{ servicesPromotion.created_at|date('Y-m-d H:i:s') }}</td>
        </tr>
    {% else %}
        <tr class="text-center">
            <td colspan="20">Nėra priskirtų akcijų</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
