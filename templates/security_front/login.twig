{% extends 'base.twig' %}

{% block title %}Prisijungti{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Prisijungti</h1>
                <label for="username">{{ "email"|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus />
                <label for="password">{{ "password"|trans }}</label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required />

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Prisijungti
                </button>
            </form>
        </div>
    </div>
{% endblock %}
