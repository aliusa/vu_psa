<!DOCTYPE html>
<html lang="lt">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}VU PSA{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <!--sheets-->
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}<!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            {#<link href="{{ asset('styles/app.scss') }}" rel="stylesheet"/>#}{# /assets/styles/app.css #}

                <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
        {% endblock %}
        {# the CSS file lives at "public/css/blog.css" #}
        <!--/sheets-->

        {% block javascripts %}
            <!--importmap-->
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="{{ asset('public/logo.png') }}" loading="lazy" alt="logo" height="30" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!--kairėj-->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Pagrindinis</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/services">Paslaugos</a>
                        </li>
                        {% if app.user %}
                            {##}
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="/users/login">Prisijungti</a>
                            </li>
                        {% endif %}
                    </ul>


                    {% if app.user %}
                        <!--dešinėj-->
                        <div class="d-flex align-items-center">
                            <div class="dropdown">
                                <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ app.session.get('currentObject').getTitle() }}
                                </button>
                                <ul class="dropdown-menu">
                                    {% for users_object in app.user.users_objects %}
                                        <li><a class="dropdown-item" href="/users/change_object?id={{ users_object.getId() }}">{{ users_object.getTitle() }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                            <div>
                                <div class="d-flex flex-column mx-2">
                                    <span class="fw-bold">{{ app.user.userIdentifier }}</span>
                                    <span class="">Mokėtojo kodas: <span class="fw-bold">{{ app.user.getPayerCode() }}</span></span>
                                </div>
                            </div>
                            <a href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket"></i> Atsijungti</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>
        {% if app.user %}
            <nav class="navbar navbar-expand-lg bg-primary-subtle shadow">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav2" aria-controls="navbarNav2" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav2">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/users/dashboard"><i class="fa fa-home"></i> Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/invoices"><i class="fa-solid fa-shop"></i> Sąskaitos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endif %}

        <div class="container mt-3 flex-grow-1" role="main">

            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block title_top_wrap %}<h2>{% block title_top %}{% endblock %}</h2>{% endblock %}

            {% block body %}{% endblock %}
        </div>
        <button class="btn btn-link position-absolute ask_question" data-bs-toggle="modal" data-bs-target="#questionModal">
            <i class="fa-regular fa-circle-question fa-2x text-primary"></i>
        </button>

        <!-- Modal -->
        <div class="modal" id="questionModal" tabindex="-1" aria-labelledby="questionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    {#<div class="modal-header">
                        <h1 class="modal-title fs-5" id="questionModalLabel">Užduoti klausimą</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>#}
                    <div class="modal-body">
                        {{ render(controller(
                            'App\\Controller\\QuestionsController::new', {}
                        )) }}
                    </div>
                </div>
            </div>
        </div>

        <footer class="bg-light text-center py-3">
            <a class="" href="/slapukai">Slapukai</a>
            © Copyright 2025. Visos teisės saugomos.
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
